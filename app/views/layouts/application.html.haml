!!! Strict
%html
  %head
    %title LolBook
    = stylesheet_link_tag :all
    = javascript_include_tag :defaults
    = csrf_meta_tag
  %body
    %p.notice= notice
    %p.alert= alert
    - if user_signed_in?
      = "Hola #{current_user.email}"
    - else
      = link_to 'Registrar usuari', new_user_registration_path
    %ul
      %li= link_to 'Campions', champions_path
      %li= link_to 'Objectes', items_path
    = yield
